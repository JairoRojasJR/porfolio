---
import HeroGraphic from "./HeroGraphic.astro";
import Contactlink from "./Contactlink.astro";
import Linkedin from "../icons/Linkedin.astro";
import Github from "../icons/Github.astro";
import Whatsapp from "../icons/Whatsapp.astro";
---

<header class="hero">
  <div class="hero__div">
    <img
      class="hero__background"
      srcset="./cover-sm.webp 400w,
              ./cover-md.webp 700w,
              ./cover.webp 1024w"
      sizes="(max-width: 700px) 400px,
              (max-width: 1000px) 700px,
              (min-width: 1024px) 1024px"
    />
    <HeroGraphic />
    <section class="hero__presentation">
      <span class="hero__bracket">&#123;</span>
      <div>
        <h2>Jairo Rojas</h2>
        <h1>Desarrollador web full stack</h1>
      </div>
      <span class="hero__bracket">&#125;</span>
    </section>
    <section class="hero__contact">
      <Contactlink
        Icon={Linkedin}
        link="https://www.linkedin.com/in/jairo-rojas/"
      />
      <Contactlink Icon={Github} link="https://github.com/JairoRojasJR" />
      <Contactlink
        Icon={Whatsapp}
        link="https://api.whatsapp.com/send?phone=593982688824&text=Hola%20Jairo%2C%20he%20visto%20tu%20portafolio%20web%20y%20quer%C3%ADa%20contactarte."
      />
    </section>
  </div>
</header>

<style>
  .hero {
    height: 100dvh;
    padding: 1em;
  }

  .hero__div {
    display: flex;
    height: 100%;
    padding: 2rem;
    flex-direction: column;
    justify-content: space-evenly;
    box-shadow: 0px 0px 10px 3px var(--primary);
    position: relative;
    overflow: hidden;
    border-radius: 0.9em;
  }

  .hero__background {
    position: absolute;
    top: 0;
    left: 0;
    object-fit: cover;
    width: 100%;
    height: 100%;
    filter: brightness(0.3) grayscale(0.2);
    z-index: -1;
  }

  section,
  .hero__presentation > div {
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .hero__bracket {
    display: flex;
    align-items: center;
    font-size: 9.35em;
    color: var(--play-a);
    filter: drop-shadow(0px 0px 5px var(--play-b));
    line-height: 1;
  }

  .hero__presentation div {
    flex-direction: column;
    gap: 1.5em;
  }

  h1,
  h2 {
    text-align: center;
  }

  h2 {
    font-weight: 600;
    font-size: 1.25em;
    line-height: 1.75em;
    color: var(--play-a);
  }

  h1 {
    color: #fcea93;
    font-size: 28px;
    line-height: 2em;
    text-wrap: pretty;
  }

  .hero__contact {
    gap: 1.25em;
    grid-column: span 2;
  }

  @media screen and (min-width: 1024px) {
    .hero__div {
      display: grid;
      grid-template-columns: 40% 1fr;
      grid-template-rows: 90% 1fr;
    }

    .hero__bracket {
      font-size: 15.6em;
    }

    .hero__presentation div {
      gap: 2.5em;
    }

    h2 {
      font-size: 1.5em;
      line-height: 2em;
    }

    h1 {
      color: #fcea93;
      font-size: 1.75em;
      line-height: 2.25em;
    }
  }
</style>
